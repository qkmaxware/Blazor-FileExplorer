<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>

    <PackageId>Qkmaxware.Blazor.FileExplorer</PackageId>
    <PackageName>Qkmaxware.Blazor.FileExplorer</PackageName>
    <Version>1.0.3</Version>
    <Authors>Colin Halseth</Authors>
    <PackageTags>blazor, file-explorer</PackageTags>
    <PackageLicenseFile>LICENSE.md</PackageLicenseFile>
    <RepositoryUrl>https://github.com/qkmaxware/Blazor-FileExplorer.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageDescription>
      A reusable component for navigating and viewing the server's file system. Mainly designed for use in Electron apps.
    </PackageDescription>
    <PackageOutputPath>./../nupkg</PackageOutputPath>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\LICENSE.md" CopyToOutputDirectory="Always" Pack="true" PackagePath="$(PackageLicenseFile)" />
  </ItemGroup>

  <ItemGroup>
    <SupportedPlatform Include="browser" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="5.0.8" />
  </ItemGroup>

</Project>
